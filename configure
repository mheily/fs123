#!/bin/sh -e
# Packaging tools (e.g., debhelper) like configure scripts.  Let's
# keep this one AS SIMPLE AS POSSIBLE!  All it does is create
# a GNUmakefile in the cwd.

srcdir=$(dirname "$0")
if [ "$srcdir/GNUmakefile" -ef GNUmakefile ]; then
    echo 1>&2 'GNUmakefile - exists (running in srcdir)'
    exit 0
fi  
cat > GNUmakefile <<EOF 
### DO NOT EDIT.  CREATED BY $srcdir/configure ###
include $srcdir/GNUmakefile
EOF
echo 1>&2 'GNUmakefile - created'
